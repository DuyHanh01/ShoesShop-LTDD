<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ShoesByBrandActivity">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/Toolbar"
        app:title="VLTH Store"
        app:titleTextColor="#fff"
        android:background="#FFA60C0C"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">

    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:id="@+id/linearlayoutSort"
        android:weightSum="9"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        tools:ignore="MissingConstraints"
        android:background="#fff"


        app:layout_constraintTop_toBottomOf="@id/Toolbar"
        >

        <TextView
            android:id="@+id/banchay"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:text="Bán chạy"
            android:textColor="#6E6C6C"
            android:textSize="16dp"
            android:gravity="center"
            android:background="#fff"
            >

        </TextView>
        <TextView
            android:text="|"
            android:textColor="#ccc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </TextView>
        <TextView
            android:id="@+id/moinhat"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:textSize="16dp"
            android:text="Mới nhất"
            android:textColor="#6E6C6C"
            android:gravity="center"
            android:background="#fff"


            >

        </TextView>
        <TextView
            android:text="|"
            android:textColor="#ccc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </TextView>
        <TextView
            android:id="@+id/giathapdencao"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:text="Giá ^"
            android:textSize="16dp"
            android:textColor="#6E6C6C"
            android:gravity="center"
            android:background="#fff"
            >
        </TextView>
    </LinearLayout>
    <View
        android:id="@+id/linetextcount"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_margin="3dp"
        app:layout_constraintTop_toBottomOf="@id/linearlayoutSort"
        android:background="@color/Xam"
        tools:ignore="MissingConstraints" />
    <TextView
        android:id="@+id/txtcountsp"
        app:layout_constraintTop_toBottomOf="@id/linetextcount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"

        android:text=""
        android:textColor="#000"
        android:background="#fff"
        android:padding="5dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="0dp" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycleviewShoesByBrand"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        app:layout_constraintTop_toBottomOf="@id/txtcountsp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="0dp">

    </androidx.recyclerview.widget.RecyclerView>

</androidx.constraintlayout.widget.ConstraintLayout>